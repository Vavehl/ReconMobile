<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:tag="fragConnect"
    tools:context=".FragmentConnect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:contentDescription="@string/rad_elec_recon_mobile_logo"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/recon_mobile_logo_crimson" />

        <Space
            android:id="@+id/spaceConnect_1"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/txtReconSerial"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/no_recon_connected"
            android:textColor="@color/colorPrimaryDark"
            android:textIsSelectable="false"
            android:textSize="36sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonConnect"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/tabConnect"
            android:textColor="@color/colorIvoryText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_usb_24px"
            app:drawableLeftCompat="@drawable/ic_bluetooth_24px"
            app:drawableRightCompat="@drawable/ic_usb_24px"
            app:drawableStartCompat="@drawable/ic_bluetooth_24px" />

        <Button
            android:id="@+id/buttonDownload"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/download"
            android:textColor="@color/colorIvoryText"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCloseFile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/close_file"
            android:textColor="@color/colorIvoryText"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/clear"
            android:textColor="@color/colorIvoryText"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/system_console"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

    </LinearLayout>
</ScrollView>